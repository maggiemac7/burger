<h1>Add a Burger</h1>
<form class="create-form">

  <div class="form-group">
    <label for="burgerInput">Tell us your favourite Burger:</label>
    <input type="text" id="burgerInput" name="burger_name">
  </div>

  <div id="devoured-buttons" class="form-group">
    <label for="devoured">Devoured?</label>
      
    <input type="radio" name="devoured" value="0" checked>Needs to be Devoured!

    <input type="radio" name="devoured" value="1">Devoured!
  </div>

  <button id="createBurger" type="submit">Add Burger</button>
</form>


<h1>Burgers waiting to be Devoured</h1>


{{#each burgers}}
{{#unless devoured}}
<div>{{burger_name}}</div>
<button data-id="{{id}}" class="devourButton">Devour</button>
<button data-id="{{id}}" class="deleteButton">Delete</button>
{{/unless}}
{{/each}}

<h1>Devoured Burgers</h1>
{{#each burgers}}
{{#if devoured}}
<div>{{burger_name}}</div>
<button data-id="{{id}}" class="deleteButton">Delete</button>
{{/if}}
{{/each}}